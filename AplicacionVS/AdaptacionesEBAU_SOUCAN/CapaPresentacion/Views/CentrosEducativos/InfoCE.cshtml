@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<form>
    <div class="form-group row">
        <label for="nombreCE" class="col-4 col-form-label">CENTRO</label>
        <div class="col-8">
            <input id="nombreCE" name="nombreCE" type="text" class="form-control" required="required">
        </div>
    </div>
    <div class="form-group row">
        <label for="nombreSede" class="col-4 col-form-label">SEDE</label>
        <div class="col-8">
            <input id="nombreSede" name="nombreSede" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="telefonoCE" class="col-4 col-form-label">Teléfono</label>
        <div class="col-8">
            <input id="telefonoCE" name="telefonoCE" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="nombreOrientador" class="col-4 col-form-label">Nombre</label>
        <div class="col-8">
            <input id="nombreOrientador" name="nombreOrientador" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="apellidosOrientador" class="col-4 col-form-label">Apellidos</label>
        <div class="col-8">
            <input id="apellidosOrientador" name="apellidosOrientador" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="correoOrientador" class="col-4 col-form-label">Correo</label>
        <div class="col-8">
            <input id="correoOrientador" name="correoOrientador" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="telefonoOrientador" class="col-4 col-form-label">Teléfono</label>
        <div class="col-8">
            <input id="telefonoOrientador" name="telefonoOrientador" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="nombreEquipoDirectivo" class="col-4 col-form-label">Nombre</label>
        <div class="col-8">
            <input id="nombreEquipoDirectivo" name="nombreEquipoDirectivo" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="apellidosEquipoDirectivo" class="col-4 col-form-label">Apellidos</label>
        <div class="col-8">
            <input id="apellidosEquipoDirectivo" name="apellidosEquipoDirectivo" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="telefonoEquipoDirectivo" class="col-4 col-form-label">Teléfono</label>
        <div class="col-8">
            <input id="telefonoEquipoDirectivo" name="telefonoEquipoDirectivo" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="direccionCE" class="col-4 col-form-label">Dirección</label>
        <div class="col-8">
            <input id="direccionCE" name="direccionCE" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="nombreMunicipio" class="col-4 col-form-label">Municipio</label>
        <div class="col-8">
            <select id="nombreMunicipio" name="nombreMunicipio" class="custom-select">
                <option value="1">Santander</option>
                <option value="2">Torrelavega</option>
                <option value="3">Camargo</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Actualizar Información</button>
        </div>
    </div>
</form>

