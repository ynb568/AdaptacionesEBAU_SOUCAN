@using CapaEntidad;
@model CapaPresentacion.ViewModels.IndexViewModel


@{
    ViewBag.Title = "Home Gestion Adaptaciones";
}
<style>
    /* Personalización de los botones */
    .btn-lg-square {
        width: 250px; /* Ancho */
        height: 250px; /* Alto */
        font-size: 24px; /* Tamaño de fuente */
        border-radius: 30px; /* Bordes redondeados */
        text-align: center; /* Centrar texto horizontalmente */
        line-height: 250px; /* Centrar texto verticalmente */
        font-weight: bold; /* Texto en negrita */
        background-color: #005c64; /* Color de fondo */
        color: #fff; /* Color del texto */
        border-color: #005c64; /* Color del borde */
    }
</style>

<main>
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center">
                @Html.ActionLink("SOUCAN", "LoginSoucan", "Home", null, new { @class = "btn btn-info btn-lg-square" })
            </div>
            <div class="col-md-6 d-flex justify-content-center">
                @Html.ActionLink("CENTRO", "LoginCE", "Home", null, new { @class = "btn btn-info btn-lg-square" })
                <!-- <a href='https:/localhost:XXXX/Home/LoginCe'>CENTRO</a> -->

                @Url.Action("LoginCe", "Home")
                <!-- https:/localhost:XXXX/Home/LoginCe -->
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>a</th>
                    <th>b</th>
                    <th>c</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Estudiantes)
                {
                    <tr>
                        <td>@item.Ap1Estudiante</td>
                        <td>@item.CursoConvocatoria</td>
                        <td>
                        </td>
                    </tr>
                }
        </table>
    </div>
</main>
